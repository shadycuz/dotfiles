# shellcheck shell=bash

# If not interactive then return
[ -z "$PS1" ] && return

# Start genie to start systemd
if [[ ! -v INSIDE_GENIE ]]; then
  read -t 3 -r -p "Preparing to enter genie bottle (in 3s); abort? " response
  echo
  response=${response:=n}

  if [[ $response != "y" ]]; then
    echo "Starting genie:"
    exec /usr/bin/genie -s
  fi
fi

